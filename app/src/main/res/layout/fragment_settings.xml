<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="360dp"
        android:background="@color/grey_green"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="30dp"
        android:paddingRight="5dp"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_settings_music"
            android:layout_width="357dp"
            android:layout_height="103dp"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:fontFamily="@font/amatica_sc_bold"
            android:shadowColor="@android:color/white"
            android:shadowDx="-3"
            android:shadowDy="-3"
            android:shadowRadius="1"
            android:text="@string/music"
            android:textColor="@color/super_dark_green"
            android:textSize="60sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_settings_sfx"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:fontFamily="@font/amatica_sc_bold"
            android:paddingBottom="30dp"
            android:shadowColor="@android:color/white"
            android:shadowDx="-3"
            android:shadowDy="-3"
            android:shadowRadius="1"
            android:text="@string/sfx"
            android:textColor="@color/super_dark_green"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_main_settings_clear"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:backgroundTint="@color/nice_green"
            android:fontFamily="@font/amatica_sc_bold"
            android:onClick="clearData"
            android:text="@string/clearDataText_button"
            android:textAlignment="center"
            android:textColor="@color/super_dark_green"
            android:textSize="34sp"
            app:strokeColor="@color/grass_green"
            app:strokeWidth="2dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>